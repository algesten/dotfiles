[alias]
	st = status -s
	ci = commit
	gr = log --graph --pretty=tformat:'%Cred%h %Cblue%an%Cgreen%d %Creset%s'
	l  = log --pretty=tformat:'%Cred%h %Cblue%an%Cgreen%d %Creset%s'
	ls = diff-tree --no-commit-id --name-only -r
	un = update-index --assume-unchanged
	nun = update-index --no-assume-unchanged
[user]
	name = Martin Algesten
	email = martin@algesten.se
[core]
	pager = cat
	filemode = true
[push]
	default = simple
	followTags = true
[pull]
	rebase = true
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[init]
	defaultBranch = main

# Work config - applies to repos in ~/dev/lk/ on any OS
[includeIf "gitdir:~/dev/lk/"]
        path = ~/.gitconfig-work

# macOS-specific settings (credential helper, etc.)
[includeIf "gitdir:/Users/"]
        path = ~/.gitconfig-macos
[credential "https://github.com"]
	helper =
	helper = !gh auth git-credential
[credential "https://gist.github.com"]
	helper =
	helper = !gh auth git-credential
