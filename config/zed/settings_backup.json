// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  "base_keymap": "VSCode",
  "preview_tabs": {
    "enabled": false
  },
  "status_bar": {
    "experimental.show": false
  },
  "minimap": {
    "show": "never"
  },
  "hover_popover_delay": 1500,
  "max_tabs": 8,
  "restore_on_file_reopen": false,
  "buffer_font_weight": 500.0,
  "buffer_font_fallbacks": [
    "Menlo",
    "Monaco",
    "Courier New",
    "monospace"
  ],
  "buffer_font_family": "Source Code Pro",
  "use_auto_surround": false,
  "indent_guides": {
    "enabled": false
  },
  "features": {
    "inline_completion_provider": "none"
  },
  "ui_font_size": 16,
  "buffer_font_size": 14.0,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Le Blackque orange"
  },
  "wrap_guides": [110],
  "use_autoclose": false,
  // "lsp": {
  //   "rust-analyzer": {
  //     "binary": {
  //       "path": "/Users/martin/.cargo/bin/rust-analyzer",
  //       "arguments": ["--no-log-buffering"]
  //     }
  //   }
  // },
  "git": {
    "inline_blame": {
      "enabled": true
    }
  }
}
